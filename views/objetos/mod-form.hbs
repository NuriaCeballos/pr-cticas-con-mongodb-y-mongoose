 <main>
    <div class="container">
      <div class="row">
        <div class="col-12 d-flex resultado justify-content-center align-items-center">
          <form method="post" action="/objetos/detalles" style="display:grid" enctype="multipart/form-data">
            Ingrese id:
            <input name="id" id="nombre" placeholder="nombre" readonly>
            <input type="submit" class="btn btn-danger" value="eliminar">
            <input type="submit" class="btn btn-warning" value="modificar">
          </form>
        </div>
        <div class="col-12">
          {{#if mensaje}}
            <div class="alert alert-success" role="alert">
              {{mensaje}}
            </div>
          {{/if}}
        </div>
    </div>
  </main>